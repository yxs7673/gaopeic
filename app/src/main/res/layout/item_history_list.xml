<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minHeight="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/txt_gray"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/status_his_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_gray"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text=""
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/time_his_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textDefault"
                    android:text="到岗时间："
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    />
                <TextView
                    android:id="@+id/name_his_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textDefault"
                    android:text="病人姓名："
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="15dp"
                    />

                <TextView
                    android:id="@+id/address_his_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textDefault"
                    android:text="服务地址："
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="15dp"
                    />
                <View
                   style="@style/Linestyle"
                    android:layout_marginTop="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >
                    <TextView
                        android:id="@+id/days_his_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:drawableLeft="@mipmap/ic_time"
                        android:text=""
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text=""
                        />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/price_his_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="220"
                        android:drawablePadding="5dp"
                        android:textColor="@color/bg_pink"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="元/天"
                        android:drawablePadding="5dp"
                        android:textColor="@color/bg_pink"
                        />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>